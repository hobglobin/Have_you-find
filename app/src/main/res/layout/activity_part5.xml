<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_part5"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.luizfilipeferreira.myapplication.Part5">

    <TextView
        android:text="Qual dos seguintes países não está no hemisfério Sul?"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textAppearance="@style/TextAppearance.AppCompat" />

    <Button
        android:text="Egito"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView5"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="101dp"
        android:id="@+id/Button10" />

    <Button
        android:text="Peru"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button11"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/Button10"
        android:layout_alignStart="@+id/Button10" />

    <Button
        android:text="Alaska"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button13"
        android:layout_marginBottom="46dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/Button11"
        android:layout_alignStart="@+id/Button11" />

    <Button
        android:text="Madagascar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Button12"
        android:layout_below="@+id/Button11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp" />
</RelativeLayout>
